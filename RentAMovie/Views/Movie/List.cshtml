@model IEnumerable<PopularMovieResultModule>

<h1>Movies</h1>

<h3>What's Popular</h3>
<div class="container text-center">
  <div class="row">
	@foreach (var movie in Model)
	{
		var posterPath = "https://image.tmdb.org/t/p/w500" + movie.PosterPath;

		<div class="col">
			<p><b>Title:</b> @movie.Title (@movie.ReleaseDate.ToString("dd-MM-yyyy"))</p>
			<p><b>Description:</b> @movie.Description</p>
			<img src="@posterPath" width="200">
		</div>
	}
  </div>
</div>