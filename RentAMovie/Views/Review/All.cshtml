@model List<ViewReviewModel>
@{
    var currentMovie = Model.FirstOrDefault().MovieInfo;

    ViewData["Title"] = $"Reviews for {currentMovie?.Title}";
}

<h1>All review for movie @currentMovie?.Title</h1>

@if (Model.Count() > 0)
{
    @foreach (var reviw in Model)
    {
        <p>@reviw.Content</p>
    }
}
else 
{ 
    <div>No reviews yet</div>
}
